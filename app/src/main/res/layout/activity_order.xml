<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_motorRelativeLayout"
    android:background="@color/viewBg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MotorActivity"
    tools:showIn="@layout/activity_motor">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/motorAppBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay"
        app:layout_scrollFlags="scroll|enterAlways|snap"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbarOrder"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >
        </android.support.v7.widget.Toolbar>  
    </android.support.design.widget.AppBarLayout>
    
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="12dp"
        android:textSize="30sp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Orderanmu"
        android:layout_below="@+id/motorAppBarLayout"
        android:id="@+id/activity_orderTextView"/>
    
    <RelativeLayout 
        android:id="@+id/activity_orderRelativeLayout"
        android:layout_below="@+id/activity_orderTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:elevation="10dp"
        android:background="@drawable/corner" >
        
        <ImageView
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            android:paddingTop="0dp"
            android:layout_below="@+id/activity_orderTextView"
            android:elevation="10dp"
            android:paddingLeft="0dp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_alignParentLeft="true"
            android:layout_width="@dimen/album_cover_height_motor"
            android:layout_height="@dimen/album_cover_height_outlet"
            android:scaleType="fitXY"
            android:background="@drawable/ninja"
            android:id="@+id/imageMotor"
        />
	
		<TextView
            android:layout_below="@+id/activity_orderTextView"
            android:layout_toRightOf="@+id/imageMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/namaMotorOutletItem"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:text="zee rent"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="#000000"
        />
        <TextView
            android:layout_below="@+id/namaMotorOutletItem"
            android:layout_toRightOf="@+id/imageMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:id="@+id/namaMotorItem"
            android:layout_marginLeft="10dp"
            android:textAllCaps="true"
            android:text="R 15"
            android:textStyle="bold"
            android:textSize="20sp"
            android:textColor="#000000"
        />

        <TextView
            android:layout_below="@+id/namaMotorItem"
            android:layout_toRightOf="@+id/imageMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/hargaMotorItem"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="0dp"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:text="Harga : Rp. 130.000 / Hari"
            android:textSize="15sp"
            android:textColor="#000000"
        />
    
        <TextView
            android:layout_below="@+id/hargaMotorItem"
            android:layout_toRightOf="@+id/imageMotor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/free"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:text="Gratis"
            android:textStyle="bold"
            android:textSize="15sp"
            android:textColor="#000000"
        />
        <TextView
            android:layout_below="@+id/hargaMotorItem"
            android:layout_toRightOf="@+id/free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/bbm"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:text="- Full BBM"
            android:textSize="15sp"
            android:textColor="#000000"
        />
        <TextView
            android:layout_below="@+id/bbm"
            android:layout_toRightOf="@+id/free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/helm"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:text="- 2 Helm"
            android:textSize="15sp"
            android:textColor="#000000"
        />
        <TextView
            android:layout_below="@+id/helm"
            android:layout_toRightOf="@+id/free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rain"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:text="- 1 Raincoat"
            android:textSize="15sp"
            android:textColor="#000000"
        />
        <TextView
            android:layout_below="@+id/rain"
            android:layout_toRightOf="@+id/free"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pick"
            android:layout_marginBottom="10dp"
            android:paddingBottom="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="0dp"
            android:text="- Pickup and Delivery"
            android:textSize="15sp"
            android:textColor="#000000"/>     
    </RelativeLayout>
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Delivery Schedule"
        android:layout_below="@+id/activity_orderRelativeLayout"
        android:id="@+id/deliverSchedule"/>
    
    <EditText
        android:id="@+id/dateDeliverySch"
        android:ems="10"
        android:includeFontPadding="true"
        android:paddingLeft="15dp"
        android:inputType="date"
        android:focusable="false"
        android:hint="Delivery Schedule"
        android:layout_below="@+id/deliverSchedule"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Pick up Schedule"
        android:layout_below="@+id/dateDeliverySch"
        android:id="@+id/pickSchedule"/>

    <EditText
        android:id="@+id/datePickSch"
        android:ems="10"
        android:includeFontPadding="true"
        android:paddingLeft="15dp"
        android:inputType="date"
        android:focusable="false"
        android:hint="Pick Up Schedule"
        android:layout_below="@+id/pickSchedule"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="40dp"/>
    
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Syarat Jaminan"
        android:layout_below="@+id/datePickSch"
        android:id="@+id/garansi"/>
    
    <LinearLayout
        android:id="@+id/activity_orderLinearLayout"
        android:layout_below="@+id/garansi"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:elevation="10dp"
        android:background="@drawable/edit_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <CheckBox
            android:id="@+id/paspor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Paspor" />

        <CheckBox
            android:id="@+id/KTP"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Kartu identitas" />

        <CheckBox
            android:id="@+id/Lain"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:text="Lainnya" />
    </LinearLayout>
    <TextView 
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="5dp"
        android:textSize="15sp"
        android:textColor="#000000"
        android:textAllCaps="true"
        android:textStyle="bold"
        android:text="Photo Pas"
        android:layout_below="@+id/activity_orderLinearLayout"
        android:id="@+id/textPoto"/>
	
	<ImageView
		android:clickable="true"
		android:foreground="?android:attr/selectableItemBackground"
		android:paddingTop="10dp"
		android:layout_below="@+id/textPoto"
		android:elevation="10dp"
		android:layout_marginTop="10dp"
		android:layout_marginLeft="12dp"
		android:layout_alignParentLeft="true"
		android:layout_width="@dimen/album_cover_height_outlet"
		android:layout_height="@dimen/album_cover_height_outlet"
		android:scaleType="centerCrop"
		android:background="@drawable/ic_camera"
		android:id="@+id/imagePotoPas"
	/>
    <Button
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:id="@+id/btnNext"
        android:layout_below="@+id/imagePotoPas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
		android:layout_marginBottom="10dp"
		android:layout_alignParentRight="true"
		android:layout_marginRight="15dp"
        android:background="@drawable/corner_button1"
        android:text="Next"
        android:textColor="@android:color/white"
        android:textSize="18sp" />
</RelativeLayout>
