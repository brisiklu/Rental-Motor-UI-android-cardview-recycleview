<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewMotor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:layout_margin="@dimen/card_margin"
        android:elevation="2dp"
        card_view:cardCornerRadius="@dimen/card_album_radius">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/potoMotor"
                android:clickable="false"
                android:paddingStart="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/album_cover_height_outlet"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/namaMotor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/potoMotor"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
           
            <TextView
                android:id="@+id/hargaSewa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/album_title_padding"
                android:layout_below="@+id/namaMotor"
                android:paddingLeft="@dimen/album_title_padding"
                android:paddingRight="@dimen/album_title_padding"
                android:paddingTop="@dimen/album_title_padding"
                android:textColor="@color/album_title"
                android:textSize="@dimen/album_title" />
            
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
