<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
	android:background="@drawable/bg_gradient"
	android:fitsSystemWindows="true"
    android:orientation="vertical">

    
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarDaftarSukses"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:layout_height="?attr/actionBarSize"  
        android:layout_width="match_parent"
        
        app:titleTextColor="@android:color/black"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            
            tools:text="Rentalku.co"
            android:id="@+id/toolbar_textSukses"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"/>
    </android.support.v7.widget.Toolbar>

	<RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/title1"
			android:text="SELAMAT EA"
            android:textStyle="bold"
			android:layout_marginTop="96dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textColor="@android:color/black"
            android:textSize="22sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/logo"
            android:src="@drawable/rentalkuco"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/title1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/activity_vertical_margin" 
            app:civ_border_width="2dp"
            app:civ_border_color="#FFF"
        />
		<TextView
            android:gravity="center"
			android:id="@+id/txtNamaLengkap"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
			android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="@dimen/activity_vertical_margin"
			android:layout_below="@+id/logo"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="#3a3a3a"
			android:textSize="15sp" />
        
        <RelativeLayout
            android:id="@+id/layoutMail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/txtNamaLengkap">

			<TextView
                android:gravity="center"
				android:layout_marginLeft="@dimen/activity_horizontal_margin"
				android:layout_marginRight="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:id="@+id/txtEmailDaftar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#3a3a3a"
				android:textSize="15sp" />
			
			<TextView
                android:gravity="center"
				android:layout_marginLeft="@dimen/activity_horizontal_margin"
				android:layout_marginRight="@dimen/activity_horizontal_margin"
				android:layout_marginTop="@dimen/activity_vertical_margin"
				android:id="@+id/txtPassword"
				android:layout_below="@+id/txtEmailDaftar"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:textColor="#3a3a3a"
				android:textSize="15sp" />
            <TextView
                android:gravity="center"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginRight="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:id="@+id/sah"
                android:layout_below="@+id/txtPassword"
                android:text="Sah terdaftar yeeee"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textColor="#3a3a3a"
				android:textSize="15sp" />
		</RelativeLayout>>
		<Button
			android:id="@+id/btnSuksesDaftar"
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
			android:layout_marginTop="400dp"
			android:background="@drawable/button"
			android:text="Go Login Gaes"
			android:textColor="@android:color/white"
			android:textSize="18sp" />
    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
